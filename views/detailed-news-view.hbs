<div class="row">
    <div class="col-xs-12 col-md-12">
        <h3>{{Tittle}}</h3>
        <br>
        <p style="color: #18a39c" id="bold">{{News}}</p>
        <p id="bold">Display Date: {{Startdate}}</p>
        <p id="bold">Ending Date :{{Enddate}}</p>
        <form method='get' action='/news/edit/{{_id}}' style="float: left">
            <button type="submit" class="btn btn-primary"><b>Edit</b></button>
        </form>
        <form method='get' action='/news/delete/{{_id}}' style="float: right" onsubmit="return confirm('Confirm Delete?');">
            <button type="submit" class="btn btn-danger"><b>Delete</b></button>
        </form>
    </div>
</div>