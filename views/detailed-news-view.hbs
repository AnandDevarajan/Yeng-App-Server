<!--delete news attachment-->
<script>
    $(document).ready(function () {
        $("#del-att").click(function () {
            swal({
                title: "Are you sure?",
                text: "The attached file will be deleted!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            var name=this.value;
            console.log(name);
            $.ajax({
                url:"/news/del_attach",
                method:"POST",
                data:{
                    "Name":name
                },
                success:function (data) {
                 swal("done","Attachment file deleted","success");
                 $("#news_details").hide();
                }
            })

        })
    })
</script>
<script>
    $(document).ready(function () {
        $("#del-news").on('submit',function () {
            swal("done","Attachment file deleted","success");
        })
    })

</script>




