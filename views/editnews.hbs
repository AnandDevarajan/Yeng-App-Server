<div class="row">
    <div class="col-xs-12 col-md-4 col-lg-4">
        <div class="container">

        <h1>Edit News</h1>
        <form method='post' action='/news/edit' class="form-group">
            <input type="hidden" name="id" value="{{_id}}">
            <label for="Tittle">Tittle</label>
            <input type="text" name="Tittle" id="Tittle" value="{{Tittle}}" class="form-control" required>
            <label for="News">News</label>
            <textarea id="News" name="News" class="form-control" required>{{News}}</textarea>
            <label for="DisplayDate">Display date</label>
            <input type="text" name="DisplayDate" id="DisplayDate" class="date" value="{{DisplayDate}}" required>
            <br><label for="EndDate">EndDate</label>
            <input type="text" name="EndDate" id="EndDate" class="date" style="margin-left: 27px" value="{{EndDate}}" required>
            <br><br><button type="submit" class="btn btn-success" style="margin-left: 90px"><b>Save</b></button>


        </form>
        </div>
    </div>
</div>
<script>
    $( function() {
        $( ".date" ).datepicker({ dateFormat: 'dd-mm-yy' });
    } );
</script>