<div class="row">
    <div class="col-xs-6 col-md-4 col-lg-4">
        <div class="container">

        <h1>Edit News</h1>
        <form method='post' action='/news/edit' class="form-group">
            <input type="hidden" name="id" value="{{_id}}">
            <br>
            <input type="text" name="Tittle" id="Tittle" value="{{Tittle}}" class="form-control" style="width: 45%" required>
             <br>
            <textarea id="News" name="News" class="form-control" style="width: 45%" required>{{News}}</textarea>
             <br>
            <!--<input type="text" name="DisplayDate" id="DisplayDate" class="date" value="{{DisplayDate}}" required>-->
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='date' class="form-control" name="DisplayDate" placeholder="Display Date" value="{{DisplayDate}}" required>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                </div>
            </div>
            <!--<input type="text" name="EndDate" id="EndDate" class="date" value="{{EndDate}}" required>-->
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='date' class="form-control" name="EndDate" placeholder="End Date" value="{{EndDate}}" required>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                </div>
            </div>
            <br><button type="submit" class="btn btn-success"><b>Save</b></button>



        </form>
            <button class="admin_det_btn btn" id="cancel_edit"><b>Cancel</b></button>
        </div>
    </div>
</div>

<script src="/js/sidepanel_home.js"></script>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
    $(function () {
        $('#datetimepicker2').datetimepicker();
    });
</script>