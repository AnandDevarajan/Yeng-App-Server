<h2>Add News & Updates</h2>
<div>

<form class="form-group" id="addnewsandupdates" method="POST" action="/news/add" encType="multipart/form-data">
    <input type="text" name="Tittle" id="Tittle" class="form-control" placeholder="Tittle" required>
    <br><textarea name="News" id="News" class="form-control" placeholder="Type News" required></textarea>
    <br><!--<input type="text" name="DisplayDate" id="DisplayDate" class="date" placeholder="Display Date" required>-->
    <div class="form-group">
        <div class='input-group date' id='display_date'>
            <input type='text' class="display_date form-control inputText" name="DisplayDate" id="DisplayDate" placeholder="Display Date" required>

            <span class="input-group-addon">

                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
        </div>
    </div>
    <div class="form-group">
        <div class='input-group date' id='end_date'>
            <input type='text' class="end_date form-control" name="EndDate" id="EndDate" placeholder="End Date" required>
            <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
        </div>

        <p class="upload-label">upload news attachment</p>
    <input class="btn upload" id="input-b1" name="NewsAttachment" id="NewsAttachment" type="file">
    <br><br><!--<input type="text" name="EndDate" id="EndDate" class="date"  placeholder="End Date" required>-->
    <br><br><button type="submit" value="Submit" class="btn btn-success"><b>Submit</b></button>
    </div>

</form>
</div>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#display_date').datetimepicker({
                format:"YYYY/MM/DD HH:mm"
            });
        });
        $(function () {
            $('#end_date').datetimepicker({
                format:"YYYY/MM/DD HH:mm"
            });
        });
    </script>


